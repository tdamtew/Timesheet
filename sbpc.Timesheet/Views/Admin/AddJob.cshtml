@model sbpc.Timesheet.Models.AdminViewModels.JobViewModel

@{
    ViewData["Title"] = "Add New Job";
    ViewData.AddActivePage(AdminNavPages.AddEmployee);
}

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-primary" style="border:none;">
            <div class="panel-heading"><h5><i class="fa fa-info-circle fa-lg"></i> @ViewData["Title"]</h5></div>
            <div class="panel-body">
                <form asp-action="AddJob">
                    @Html.Partial("_StatusMessage", Model.StatusMessage)
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OverTimeRate" class="control-label"></label>
                        <input asp-for="OverTimeRate" class="form-control" />
                        <span asp-validation-for="OverTimeRate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CostPerMile" class="control-label"></label>
                        <input asp-for="CostPerMile" class="form-control" />
                        <span asp-validation-for="CostPerMile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" style="width:100px;"><i class="fa fa-save fa-lg"></i> Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

