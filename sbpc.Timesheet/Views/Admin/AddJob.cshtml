@model sbpc.Timesheet.Models.AdminViewModels.JobViewModel

@{
    ViewData["Title"] = "AddJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddJob</h2>

<h4>JobViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OverTimeRate" class="control-label"></label>
                <input asp-for="OverTimeRate" class="form-control" />
                <span asp-validation-for="OverTimeRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostPerMile" class="control-label"></label>
                <input asp-for="CostPerMile" class="form-control"/>
                <span asp-validation-for="CostPerMile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

