@model sbpc.Timesheet.Models.AdminViewModels.JobViewModel

@{
    ViewData["Title"] = "New Job";
    ViewData["panel-header"] = "Job Details";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @ViewData["Title"] <br />
            <small>Provide new job information below</small>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading"><span class="panel-title">@ViewData["panel-header"]</span></div>
            <div class="panel-body">
                <form asp-action="AddJob">
                    @Html.Partial("_StatusMessage", Model.StatusMessage)
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OverTimeRate" class="control-label"></label>
                        <input asp-for="OverTimeRate" class="form-control" />
                        <span asp-validation-for="OverTimeRate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CostPerMile" class="control-label"></label>
                        <input asp-for="CostPerMile" class="form-control" />
                        <span asp-validation-for="CostPerMile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" style="width:100px;"><i class="fa fa-save fa-lg"></i> Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

