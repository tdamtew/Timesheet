@using Microsoft.AspNetCore.Identity
@using sbpc.Timesheet.Data.Entity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "My timesheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="wait" class="modal" style="display:none; position:absolute; top:50%; left:50%;"><img src='~/images/pIkfp.gif' /></div>
<div class="row">
    <div class="col-lg-8">
        <h1 class="page-header">
            @ViewData["Title"] <br/>
            <small>Add/update your hours, expenses and mileage.</small>
        </h1>
    </div>
    <div class="col-lg-4 text-right notify"></div>
</div>
<div class="row alert alert-info"><i class="fa fa-info-circle"></i> please click on <strong>edit</strong> next to the corresponding record to start updating.</div>
<div id="TimesheetWidget">
    @await Component.InvokeAsync("TimesheetWidget", new { userName = UserManager.GetUserName(User), dateTime = ViewBag.date == null ? DateTime.Now : ViewBag.date })
</div>

@section scripts
    {
    <script src="~/js/users-timesheet.js"></script>
}
