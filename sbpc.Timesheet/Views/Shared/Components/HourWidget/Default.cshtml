@model sbpc.Timesheet.Models.HourViewModel
@using sbpc.Timesheet.Helpers

<div class="panel panel-primary">
    <div class="panel-heading"><i class="fa fa-edit"></i> <strong>Add/Edit Hour</strong></div>
    <div class="panel-body">
        <form asp-action="SaveHour" asp-controller="Timesheet" class="hour">
            @Html.HiddenFor(Model => Model.Id)
            @Html.HiddenFor(Model => Model.Date)
            <div class="form-group">
                <span class="control-label">Select Job:</span>
                @Html.DropDownListFor(model => model.JobName, new SelectList(ViewBag.jobList, "Name", "Name"), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <span class="control-label">Hours:</span>
                <input asp-for="Hours" class="form-control" min="1" max="12" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="control-label">Item:</span>
                @Html.DropDownListFor(model => model.Item, Constants.Items, null, new { @class = "form-control" })
                <span asp-validation-for="Item" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="control-label">Note:</span>
                <input asp-for="Note" class="form-control"  />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:100px;"><i class="fa fa-save"></i> Save</button>
            </div>
        </form>
    </div>
</div>