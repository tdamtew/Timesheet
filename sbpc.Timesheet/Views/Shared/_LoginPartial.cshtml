@using Microsoft.AspNetCore.Identity
@using sbpc.Timesheet.Data.Entity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-collapse collapse">
        @if (SignInManager.IsSignedIn(User))
        {
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                <div style="padding-right: 30px;">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" style="color:white; ">Hello @UserManager.GetUserName(User)!</a>
                        </li>
                        <li>
                            <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color:white; ">Log out</button>
                        </li>
                    </ul>
                </div>
            </form>
        }
        else
        {
            <div style="padding-right: 30px;">
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-area="" asp-controller="Account" asp-action="Login" style="color:white; " >Log in</a></li>
                </ul>
            </div>
        }
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">SBP Timesheet</a>
        </div>
        <div class="navbar-default sidebar" role="navigation">
            <br />
            @if (SignInManager.IsSignedIn(User))
            {
                @await Component.InvokeAsync("NavWidget", UserManager.GetUserName(User))
            }
            else
            {
                <ul class="nav" id="side-menu">
                    <li>
                        <span><i class="fa fa-edit fa-fw"></i>Home</span>
                        <ul class="nav nav-second-level in">
                            <li>
                                <a href="@Url.Action("Index","Home")">Log In</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>
